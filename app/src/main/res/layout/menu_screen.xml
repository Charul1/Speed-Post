<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="985dp"
    android:layout_height="452dp"
    android:orientation="vertical"
    android:layout_marginRight="8dp">



    <Button
        android:id="@+id/use_kiosk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:padding="20dp"
        android:text="How to use this Kiosk"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/print_QR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="30sp"
        android:text="Print the QR code"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/post_letter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="30sp"
        android:text="Post the letter/parcel"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/back_lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="30sp"
        android:text="GO Back"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>